# Get your Financial Datasets API key from https://financialdatasets.ai/
FINANCIAL_DATASETS_API_KEY=your-financial-datasets-api-key

# Financial Datasets API Configuration
# Base URL for the Financial Datasets API
# Default: https://api.financialdatasets.ai
FINANCIAL_DATASETS_API_BASE=https://api.financialdatasets.ai

# API request timeout in seconds
# Default: 30.0
API_TIMEOUT=30.0

# Health check timeout in seconds
# Default: 5.0
HEALTH_CHECK_TIMEOUT=5.0

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# MCP Server Configuration
# Transport type: "stdio" (default) or "sse" or "streamable-http"
MCP_TRANSPORT=stdio

# HTTP server port (only used when 'sse' or 'streamable-http' transport is selected)
# Default: 8000
MCP_PORT=8000

# Host for the MCP server
# Default: 127.0.0.1
MCP_HOST=127.0.0.1

# Cache Configuration
# Cache TTL in minutes
# Default: 10
CACHE_TTL_MINUTES=10